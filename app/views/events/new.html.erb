<%= form_with model: @event do |form|%>
    <div class="field">
        <%= form.text_field :title, placeholder: "Title" %>
    </div>  
    <div class="field">
        <%= form.text_area :description, placeholder: "Description" %>
    </div>  
    <div class="field">
        <%= form.text_field :location, placeholder: "Location" %>
    </div>  
    <div class="field">
        <%= form.datetime_local_field :date_time %>
    </div> 
    <%= form.submit "Create Event" %>
<% end %>